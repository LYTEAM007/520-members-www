.menu {
  // position fixed
  // top 100px
  left 0
  z-index 888
  width 370px
  .item {
    display flex
    align-items center
    background-image linear-gradient(270deg, rgba(33, 0, 19, 0) 0%, #050003 100%)
    height 104px
    margin-bottom 4px
    position relative
    
    .badge-arrow {
      position absolute
      left 0
      top 50%
      transform translate3d(0, -50%, 0)
      opacity 0
    }
    .logo {
      margin-left 30px
      margin-right 20px
      // border:1px solid red;
      width 72px
      height 82px
      display flex
      justify-content center
      align-items center
      overflow hidden
      img {
        // max-width 120%
      }
    }
    .text {
      color #FEA501
      h3 {
        font-size 26px
      }
      h4{
        margin-top 7px
        margin-bottom 4px
        font-size 16px
      }
      p {
        font-size 12px
      }
    }
    .arrow {
      color #fff
      font-size 24px
      margin-left 15px
      opacity 0
    }
    &.router-link-active {
      background-image linear-gradient(270deg, rgba(142, 4, 86, 0) 0%, #8E0456 100%)
      .text {
        color #fff
      }
      .arrow, .badge-arrow {
        opacity 1
      }
    }
    &.waiting {
      pointer-events: none;
      background-image linear-gradient(270deg, rgba(33, 0, 19, 0) 0%, rgba(255, 255, 255, 0.2) 100%)
      .text{
        color rgba(255,255,255,.5)
        }
    }
  }
}
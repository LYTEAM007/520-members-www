@import '~@/assets/css/mixin.styl'
.itemListWrapper {
  display flex
  justify-content center
  margin 0 auto
  clearfix()
  // border 1px solid red
  // width 1200px
  margin-top 50px
  padding 20px
  .itemListBox {
    position relative
    .next {
      background url('./img/next.png')
      right -90px
      top 120px
      width 70px
      height 98px
      outline none
    }
    .prev {
      background url('./img/prev.png')
      left -90px
      top 120px
      width 70px
      height 98px
      outline none
    }
    .itemList {
      width 1150px
      .item {
        cursor pointer
        .imgBox {
          width 250px
          height 300px
          display flex
          justify-content center
          align-items center
          // background #fff
          border-radius 5px
          img {
            max-width 90%
            // max-height 90%
          }
        }
        .title {
          // line-height 40px
          margin-top 10px
          color #fff
          text-align center
          font-size 22px
          .no-wrap {
            no-wrap(1)
          }
        }
        .num {
          margin-top 10px
          text-align center
          color #fff
          font-size 22px
        }
      }
    }
  }
}

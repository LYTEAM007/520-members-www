// 背景渐变
bg-linear-gradient(direction, color01, color02) {
  background-image linear-gradient(direction, color01, color02)
}
// 定制背景渐变
gradient() {
  bg-linear-gradient(90deg, #FF9500, #FFE26E)
}
box() {
  background #FFFFFF
  box-shadow 0 2px 6px 0 #eee
  border-radius 10px
  overflow hidden
}
shadow() {
  box-shadow 0px 2px 11px 0px rgba(213, 213, 213, 0.5)
}
btn() {
  background $btnColor
  box-shadow 0 3px 4px 0 #FFC26B
  border-radius 20px
  line-height 40px
  color #fff
  text-align center
  font-size 14px
  cursor pointer
  display inline-block
}
btn-ani() {
  cursor: pointer
  trans()
  &:hover {
    transform translate3d(0, -2px, 0)
  }
}
// // 字体渐变
text-linear-gradient(direction, color01, color02) {
  background-image -webkit-linear-gradient(direction, color01, color02)
  -webkit-background-clip text
  -webkit-text-fill-color transparent
}
abnormal() {
  background #fff
  border-radius 0 0 0 30px
  padding 15px 10px
  font-size 13px
  box-shadow 0 2px 6px 0 rgba(0, 0, 0, 0.1)
}
